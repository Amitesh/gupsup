<div class="jumbotron">
  <% if user_signed_in? %>
    <h2>
      <img class="media-object1" src="<%= (current_user.avatar)[:big]%>" >
      Welcome <%= current_user.name %>!
    </h2>
    <p class="lead">
      Let's do some Gupsup!!
    </p>
    
    <!-- Add React app -->
    <div id="gupsup-react-app"></div>

  <% else %>
    <h2>Welcome, new user!</h2>
    <p class="lead">
      Sign in or sign up to start Gupsup with your friends.
    </p>
    <div class="container-fluid login-box">
      <div class="col-xs-6">
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
      </div>
      <div class="col-xs-6">
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>